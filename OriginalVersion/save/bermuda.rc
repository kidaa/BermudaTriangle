	SUBMENU	"~Game", IDM_GAME, MIS_TEXT
	BEGIN
		MENUITEM "~New", IDM_GAMENEW, MIS_TEXT
		MENUITEM	"~Settings ...", 	IDM_GAMESETTINGS, MIS_TEXT
		MENUITEM "~Highscores ...", IDM_GAMEHIGH, MIS_TEXT
	END
	SUBMENU	"~Help", IDM_HELP, MIS_TEXT
	BEGIN
		MENUITEM "Help ~index", IDM_HELPINDEX, MIS_TEXT
		MENUITEM "~General help", IDM_HELPGENERAL, MIS_TEXT
		MENUITEM "~Using help", IDM_HELPEXTENDED, MIS_TEXT
		MENUITEM "~Keys and Buttons help", IDM_HELPKEYS, MIS_TEXT
		MENUITEM SEPARATOR
		MENUITEM	"~Product information",	IDM_HELPPRODUCTINFO, MIS_TEXT
	END
END

